<?php
     // Obtén la URL del video desde el parámetro 'url'
     $url = $_GET['url'];

     // Verifica que la URL sea de Streamtape (opcional, por seguridad)
     if (strpos($url, 'streamtape.com') !== false) {
         // Incrusta el video en un iframe
         echo "<iframe src='$url' width='100%' height='500px' allowfullscreen></iframe>";
     } else {
         echo "URL no válida. Solo se permiten enlaces de Streamtape.";
     }
     ?>
